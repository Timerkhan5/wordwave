@model wordwave.Models.Task
@{
    ViewData["Title"] = "Редактировать задание";
}
<h2>Редактировать задание</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label>Вопрос</label>
        <input asp-for="Question" class="form-control" />
        <span asp-validation-for="Question" class="text-danger"></span>
    </div>
    <div>
        <label>Вариант 1</label>
        <input asp-for="Option1" class="form-control" />
        <span asp-validation-for="Option1" class="text-danger"></span>
    </div>
    <div>
        <label>Вариант 2</label>
        <input asp-for="Option2" class="form-control" />
        <span asp-validation-for="Option2" class="text-danger"></span>
    </div>
    <div>
        <label>Вариант 3</label>
        <input asp-for="Option3" class="form-control" />
        <span asp-validation-for="Option3" class="text-danger"></span>
    </div>
    <div>
        <label>Вариант 4</label>
        <input asp-for="Option4" class="form-control" />
        <span asp-validation-for="Option4" class="text-danger"></span>
    </div>
    <div>
        <label>Правильный вариант (1-4)</label>
        <input asp-for="CorrectOption" class="form-control" type="number" min="1" max="4" />
        <span asp-validation-for="CorrectOption" class="text-danger"></span>
    </div>
    <div>
        <label>Сложность (1-3)</label>
        <input asp-for="Difficulty" class="form-control" type="number" min="1" max="3" />
        <span asp-validation-for="Difficulty" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>
